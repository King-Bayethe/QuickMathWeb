<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuickMathWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QuickMathWeb.styles.css" asp-append-version="true" />
    <style>
        .navbar {
            overflow: hidden;
        }

            .navbar a {
                float: left;
                font-size: 16px;
                color: black;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
            }

        .subnav {
            float: left;
            overflow: hidden;
        }

            .subnav .subnavbtn {
                font-size: 16px;
                border: none;
                outline: none;
                color: black;
                padding: 14px 16px;
                background-color: inherit;
                font-family: inherit;
                margin: 0;
            }

            .navbar a:hover, .subnav:hover .subnavbtn {
                background-color: red;
            }

        .subnav-content {
            display: none;
            position: fixed;
            left: 0;
            background-color: red;
            width: 100%;
            z-index: 1;
        }

            .subnav-content a {
                float: left;
                color: black;
                text-decoration: none;
            }

                .subnav-content a:hover {
                    background-color: #eee;
                    color: black;
                }

        .subnav:hover .subnav-content {
            display: block;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="Images/logo.png" style="width: 30px; height: 30px;" alt="Company logo">
                    QuickMath
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @*<ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Play" asp-action="Setup">Play</a>
                        </li>

                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Statistics</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Settings</a>
                        </li>
                    </ul>*@
                    <div class="navbar">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        <div class="subnav">
                            <button class="subnavbtn">Play<i class="fa fa-caret-down"></i></button>
                            <div class="subnav-content">
                                <a class="nav-link text-dark" asp-area="" asp-controller="CompetitiveMode" asp-action="FiniteGame">Competitive Mode</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="InfiniteMode" asp-action="InfiniteGame">Infinite Mode</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="PracticeMode" asp-action="PracticeSetup">Practice Mode</a>
                            </div>
                        </div>
                        <div class="subnav">
                            <button class="subnavbtn">Search<i class="fa fa-caret-down"></i></button>
                            <div class="subnav-content">
                                <a href="#bring">Tournament LookUp</a>
                                <a href="#deliver">Game LookUp</a>
                                <a href="#package">Player LookUp</a>
                                <a href="#package">Team LookUp</a>
                                <a href="#express">School LookUp</a>
                            </div>
                        </div>
                        <div class="subnav">
                            <button class="subnavbtn">Leaderboards<i class="fa fa-caret-down"></i></button>
                            <div class="subnav-content">
                                <a href="#PlayerRanking">Players</a>
                                <a href="#TeamRanking">Teams</a>
                                <a href="#CollegeRanking">Colleges</a>
                            </div>
                        </div>
                        <div class="subnav">
                            <button class="subnavbtn">Profile<i class="fa fa-caret-down"></i></button>
                            <div class="subnav-content">
                                <a href="#link1">Messaging</a>
                                <a href="#link2">Notifications</a>
                                <a href="#link3">Stats</a>
                                <a href="#link4">Settings</a>
                            </div>
                        </div>
                    </div>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - QuickMathWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
